

<div class="row justify-content-around mt-5 p-3 mx-0">

  <div class="col-12 col-lg-6" id="devise_subcontent" >

    <p class="mb-4" style="font-size: 1.5em">Inscription enseignant</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>


      <div class="form_group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><span class="fa fa-envelope-o"></span>
           </div>
        <%= f.email_field :email, class: 'form-control',autocomplete: "email", placeholder:"Email" %>
        </div>
      </div>
      <br />

      <div class="form_group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><span class="fa fa-lock"></span>
          </div>
        <%= f.password_field :password, class: 'form-control',autocomplete: "off", placeholder:"Mot de passe" %>
        </div>
      </div>
      <br />
      <div class="form_group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><span class="fa fa-lock"></span>
          </div>
        <%= f.password_field :password_confirmation, class: 'form-control',autocomplete: "off", placeholder:"Confirmation du mot de passe" %>
        </div>
      </div>

      <br>

      <p style="color:black">En vous inscrivant, vous acceptez les <a href="/annexe/CGU" target="_blank">conditions générales d'utilisation</a>, et les <a href="/annexe/politique_de_confidentialite" target="_blank"> politiques de confidentialité</a>.</p>

      </br>
      <div class="actions">
        <%= f.submit "Inscription", class: "form-control btn btn-warning", style:"color:white;"%>
      </div>
    <% end %>
    <br/>
    Vous avez déjà un compte ? <%= render "teachers/shared/links" %>
  </div>
</div>