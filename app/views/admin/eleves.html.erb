<h1> Elèves </h1>

<table class="table">
		<tr>
			<th>Nom</th>
			<th>Prénom</th>
			<th>email</th>
			<th>Téléphone</th>
			<th>Nb de cours</th>
		</tr>
		<% @users.each do |c| %>
		<tr>
			<td><%=c.infouser.try(:first_name)%></td>
			<td><%=c.infouser.try(:last_name)%></td>
			<td><%=c.infouser.try(:email)%></td>
			<td><%=c.infouser.try(:phone)%></td>
			<td><%=Inscription.where(user_id:c.id).length %></td>	
			<td>
				<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
					Supprimer
				</button>

				<!-- Modal -->
				<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				  <div class="modal-dialog" role="document">
				    <div class="modal-content">
				      <div class="modal-header">
				        <h5 class="modal-title" id="exampleModalLabel">Supprimer</h5>
				        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				          <span aria-hidden="true">&times;</span>
				        </button>
				      </div>
				      <div class="modal-body">
				        Supprimer cet élève.
				      </div>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
				       <%= link_to "Supprimer", {:controller => "admin", :action => "detruire_eleve", :id => c.id, :class =>"btn btn-danger"}%>
				      </div>
				    </div>
				  </div>
				</div>
			</td>
		</tr>
		<%end%>
</table>

