<table class="table">
		<tr>
			<th>Nom Prof</th>
			<th>Prénom Prof</th>
			<th>email Prof</th>
			<th>Nb d'inscrits</th>
			<th>Détails du cours</th>
		</tr>
		<% if @l.present?%>
			<% @l.each do |c| %>
				<tr>
					<td><%=Teacher.find(c).infoteacher.first_name%></td>
					<td><%=Teacher.find(c).teacher.infoteacher.last_name%></td>
					<td><%=Teacher.find(c).teacher.infoteacher.email%></td>
