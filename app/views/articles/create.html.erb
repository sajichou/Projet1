<div class="row justify-content-center">
	<div class="col-12 col-lg-10">
		<%=form_tag "/articles/create", method:"post", multipart:true do %>
		<fieldset>
			<legend class="mb-3 pt-3" style="background-color: rgb(252,98,112); color:white"> Nouvel article </legend>
				<div class="form-group">
					<label for="titre">Titre</label>
					<input type="text" id="titre" name="titre"
                     class="form-control" required >
				</div>
				<div class="form-group">
					<label for="accroche">Accroche</label>
					<input type="text" id="accroche" name="accroche"
                     class="form-control" required>
				</div>
				<div class="form-group">
					<label for="date">Date jj/mm</label>
					<input type="text" id="date" name="date"
                     class="form-control" required>
				</div>
				<div class="form-group">
					<label for="image"> Photo </label>
					<input type="file" class="form-control" name="image" required>
				</div>
				<div class="form-group">
					<label for="contenu">Contenu</label>
					<input id="x" type="hidden" name="contenu" required>
  					<trix-editor input="x"></trix-editor>
				</div>
		</fieldset>
		<button type="submit" class=" btn btn-primary">Enregistrer</button>
		<%end%>
	</div>
</div>