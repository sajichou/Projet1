<div class="row justify-content-center mt-5">
	<div class="col-12 col-lg-10 justify-content-center">
		<h1>Top Blog</h1>
		<div class="row mx-0">
			<% @articles.each do |a| %>
				<div class="col-11 col-lg-4">
					<div class="card mt-3 " style="width: 18rem; overflow: hidden">
					  
					  <div style="width:18rem; height: 200px">
					  	<%= image_tag a.image.url,:class=>"img-fluid mh-100"%>
					  </div>
					  <div class="card-body">
					    <h5 class="card-title"><%=a.titre%></h5>
					    <p class="small"><%=a.date%></p>
					    <p class="card-text"><%=a.accroche%></p>
					    <%= link_to "Lire", {:controller =>"blog", :action=>"show", :id=>a.id}, class:"btn btn-primary"%>
					  </div>
					</div>
				</div>
			<%end%>
		</div>
	</div>
</div>