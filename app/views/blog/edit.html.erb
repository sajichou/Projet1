<div class="row justify-content-center">
	<div class="col-12 col-lg-10">
		<%=form_tag "/blog/edit", method:"post", multipart:true do %>
		<fieldset>
			<legend class="mb-3 pt-3" style="background-color: rgb(252,98,112); color:white"> Modifier article </legend>
				<div class="form-group">
					<label for="titre">Titre</label>
					<input type="text" id="titre" name="titre" value='<%=@article.titre%>' 
                     class="form-control" required >
				</div>
				<div class="form-group">
					<label for="accroche">Accroche</label>
					<input type="text" id="accroche" name="accroche"
                     class="form-control" value='<%=@article.accroche%>'>
				</div>
				<div class="form-group">
					<label for="date">Date jj/mm</label>
					<input type="text" id="date" name="date" value='<%=@article.date%>'
                     class="form-control" required>
				</div>
				<div class="form-group">
					<label for="image"> Uploader nouvelle photo sinon laisser vide </label>
					<input type="file" class="form-control" name="image" value='<%=@article.image%>'>
				</div>
				<div class="form-group">
					<label for="contenu">Contenu</label>
					<input id="x" type="hidden" value='<%=@article.contenu%>' name="contenu" required>
  					<trix-editor input="x" ><%=@article.contenu%></trix-editor>
				</div>
				<input type="hidden" name="id" value='<%=@article.id%>'>
		</fieldset>
		<button type="submit" class=" btn btn-primary">Modifier</button>
		<%end%>
	</div>
</div>